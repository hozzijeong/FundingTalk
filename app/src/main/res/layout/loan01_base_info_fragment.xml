<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/loan_bg_2"
    >
<!-- 기존 디자인 보다 100px 씩 올렸음...-->
    <Button
        android:id="@+id/loan_back_activity"
        android:layout_width="61px"
        android:layout_height="52px"
        android:background="@drawable/back"
        android:layout_marginTop="370px"
        android:layout_alignStart="@id/loan_title"
        />
    <TextView
        android:id="@+id/loan_title"
        android:layout_width="86dp"
        android:layout_height="52dp"
        android:fontFamily="@font/scdream6"
        android:gravity="center"
        android:text="대출"
        android:layout_marginTop="423px"
        android:layout_marginStart="76px"
        android:textColor="#000000"
        android:textSize="40dp" />

    <TextView
        android:layout_width="643px"
        android:layout_height="83px"
        android:text="대출한도 및 여부 조회"
        android:fontFamily="@font/nanumbarungothicbold"
        android:layout_marginTop="643px"
        android:textSize="72px"
        android:layout_marginStart="25dp"
        />

    <LinearLayout
        android:id="@+id/base_layout"
        android:layout_width="1210px"
        android:layout_height="680px"
        android:layout_marginStart="116px"
        android:layout_marginEnd="114px"
        android:layout_marginTop="822px"
        android:orientation="vertical"
        android:weightSum="4">

        <EditText
            android:id="@+id/loan_user_name_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/loan_base_frame"
            android:hint="이름 입력"
            android:fontFamily="@font/nanumbarungothic"
            android:paddingLeft="20dp"
            android:textSize="41px" />

        <EditText
            android:id="@+id/loan_user_birth_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/loan_base_frame"
            android:hint="YYYY/MM/DD"
            android:paddingLeft="20dp"
            android:fontFamily="@font/nanumbarungothic"

            android:textSize="41px"

            />

        <EditText
            android:id="@+id/loan_user_phone_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/loan_base_frame"
            android:hint="-제외하고 입력해주세요"
            android:fontFamily="@font/nanumbarungothic"

            android:paddingLeft="20dp"
            android:textSize="41px"

            />



        <EditText
            android:id="@+id/loan_user_mail_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/loan_base_frame"
            android:hint="메일 입력"
            android:paddingLeft="20dp"
            android:fontFamily="@font/nanumbarungothic"

            android:textSize="41px"

            />

    </LinearLayout>

    <TextView
        android:layout_width="323px"
        android:layout_height="63px"
        android:text="본인 거주 여부"
        android:layout_marginTop="1606px"
        android:textSize="55px"
        android:fontFamily="@font/nanumbarungothicbold"
        android:layout_marginStart="116px"
        />

    <RadioGroup
        android:id="@+id/loan_live_state_rg"
        android:layout_width="323px"
        android:layout_height="258px"
        android:layout_marginLeft="116px"
        android:layout_marginRight="40dp"
        android:layout_marginTop="1730px"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/loan_live_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#4F79E0"
            android:text="예"
            android:textSize="41px"
            />
        <RadioButton
            android:id="@+id/loan_live_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="41px"
            android:buttonTint="#4F79E0"
            android:text="아니오"/>



    </RadioGroup>

    <TextView
        android:layout_width="323px"
        android:layout_height="63px"
        android:text="대출 신청 내용"
        android:layout_marginTop="2072px"
        android:textSize="55px"
        android:fontFamily="@font/nanumbarungothicbold"
        android:layout_marginStart="25dp"
        />

    <EditText
        android:id="@+id/loan_user_use_et"
        android:layout_width="1210px"
        android:layout_height="131px"
        android:layout_marginLeft="116px"
        android:layout_marginRight="114px"
        android:layout_marginTop="2183px"
        android:background="@drawable/loan_base_frame"
        android:hint="주택 구매 용도는 불가능합니다."
        android:paddingLeft="20dp"
        android:textSize="41px"
        />

    <Button
        android:id="@+id/loan_specific_btn"
        android:layout_width="1168px"
        android:layout_height="155px"
        android:background="@drawable/next"
        android:layout_marginLeft="136px"
        android:layout_marginRight="136px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="175px"
        android:textSize="20sp"/>
</RelativeLayout>