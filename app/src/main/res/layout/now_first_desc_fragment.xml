<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/top_back_icon"
                tools:layout_editor_absoluteX="12dp" />

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아파트 담보"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="85dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기도 고양시"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="134dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/main_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_back_icon"
                    tools:layout_editor_absoluteX="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pro_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9.9%"
                            tools:layout_editor_absoluteX="157dp"
                            tools:layout_editor_absoluteY="220dp" />

                        <TextView
                            android:id="@+id/pro_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12개월"
                            tools:layout_editor_absoluteX="122dp"
                            tools:layout_editor_absoluteY="200dp" />

                        <TextView
                            android:id="@+id/pro_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.3억"
                            tools:layout_editor_absoluteX="176dp"
                            tools:layout_editor_absoluteY="407dp" />

                    </LinearLayout>

            </FrameLayout>

            <ImageView
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/top_back_icon"
                tools:layout_editor_absoluteX="12dp" />

            <TextView
                android:id="@+id/ing_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재진행중 (78%)"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="407dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/pro_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/top_back_icon"
                        tools:layout_editor_absoluteX="12dp" />

                    <TextView
                        android:id="@+id/pro_first_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="만기일시상환"
                        tools:layout_editor_absoluteX="176dp"
                        tools:layout_editor_absoluteY="407dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pro_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_back_icon"
                    tools:layout_editor_absoluteX="12dp" />

                <TextView
                    android:id="@+id/pro_second_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가계자금"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="407dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pro_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_back_icon"
                    tools:layout_editor_absoluteX="12dp" />

                <TextView
                    android:id="@+id/pro_third_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근저당권"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="407dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pro_fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_back_icon"
                    tools:layout_editor_absoluteX="12dp" />

                <TextView
                    android:id="@+id/pro_fourth_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="84.87 (약25.67평)"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="407dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pro_fifth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_back_icon"
                    tools:layout_editor_absoluteX="12dp" />

                <TextView
                    android:id="@+id/pro_fifth_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="83.78%"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="407dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pro_gamjung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_back_icon"
                    tools:layout_editor_absoluteX="12dp" />

                <TextView
                    android:id="@+id/pro_gamjung_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37,000만원"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="407dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감정가는 KB부동산시세외 일반거래가 37,000만원 및 국토교통부\n 최근실거래가(최근6개월)의 변화 추이동을 반영하여 적용되었습니다."
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="407dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/loan_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_back_icon"
                    tools:layout_editor_absoluteX="12dp" />

                <TextView
                    android:id="@+id/loan_info_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37,000만원"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="407dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/funding_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_back_icon"
                    tools:layout_editor_absoluteX="12dp" />

                <TextView
                    android:id="@+id/funding_info_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37,000만원"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="407dp" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="낙찰가율"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="407dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/nakchal_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_back_icon"
                    tools:layout_editor_absoluteX="12dp" />

                <TextView
                    android:id="@+id/nakchal_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37,000만원"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="407dp" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="담보정보"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="407dp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="537dp" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="621dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>