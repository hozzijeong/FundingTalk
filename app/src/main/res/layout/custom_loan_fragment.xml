<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity"
    android:layout_marginBottom="28dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/custom_loan_total_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="61px"
            android:fontFamily="@font/nanumbarungothic"
            android:text="총 x건의 대출 잔액"
            android:textSize="53px"
            android:layout_marginTop="35dp"
            android:textColor="#DBDBDB"
            />

        <TextView
            android:id="@+id/custom_loan_total_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="89px"
            android:layout_marginTop="30px"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="0원"
            android:textSize="78px"
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/custom_loan_interest_tv"
            android:layout_width="409px"
            android:layout_height="61px"
            android:layout_marginTop="146px"
            android:fontFamily="@font/nanumbarungothic"
            android:text="이번 달 대출 이자"
            android:textSize="53px"
            android:textColor="#DBDBDB"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/custom_loan_interest_rate"
            android:layout_width="wrap_content"
            android:layout_height="89px"
            android:layout_marginTop="30px"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="- %"
            android:textSize="78px"
            android:textColor="#ffffff"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/custom_loan_loss_layout"
            android:layout_width="1000px"
            android:layout_height="350px"
            android:layout_marginTop="146px"
            android:orientation="vertical"
            android:paddingStart="46px"
            android:background="@drawable/mypage_box"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대출 이자 및 금액상환 가상 계좌"
                android:fontFamily="@font/nanumbarungothic"
                android:textSize="40px"
                android:layout_marginTop="52px"
                android:textColor="#ffffff"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:orientation="horizontal"
                android:layout_marginTop="28px"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="신한은행 110-00-00000-1111 펀딩톡"
                    android:textSize="42px"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"
                    />

                <Button
                    android:layout_width="200px"
                    android:layout_height="150px"
                    android:text="복사하기"
                    android:textSize="30px"
                    android:textColor="#6A6A6A"
                    android:fontFamily="@font/nanumbarungothic"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35px"
                    android:background="@drawable/mypage_box"
                    />
            </LinearLayout>
        </LinearLayout>

            <Button
                android:id="@+id/custom_loan_list"
                android:layout_width="match_parent"
                android:layout_height="231px"
                android:layout_marginTop="84px"
                android:fontFamily="@font/nanumbarungothicbold"
                android:paddingEnd="150px"
                android:textSize="61px"
                android:text="x건"
                android:gravity="center_vertical|right"
                android:background="@drawable/mypage_bond"/>
            <!--                bring to front 사용해서 앞으로 끌어올릴 것-->


        <ImageView
            android:id="@+id/custom_loan_graph"
            android:layout_width="1150px"
            android:layout_height="1394px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37px"
            android:background="@drawable/mypage_month" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>