<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity">
    <TextView
        android:id="@+id/loan_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="한도 조회/대출받기"
        android:textSize="25sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/loan_move_btn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:text="한도 조회"
        android:textSize="26sp"
        />

    <RelativeLayout
        android:id="@+id/loan_go_login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/loan_login_cv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="#3892C3"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="로그인 후 나만의 정보를\n 확인해보세요"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/loan_go_login_btn"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/round_shape"
                android:text="로그인"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/loan_go_join_btn"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginStart="60dp"
                android:background="@drawable/round_shape"
                android:text="회원 가입"
                android:textColor="#ffffff" />
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/nomember_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignStart="@id/loan_login_cv"
            android:layout_alignEnd="@id/loan_login_cv"
            android:layout_below="@id/loan_login_cv"
            android:layout_marginTop="100dp"
            android:text="비회원 조회하기"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/round_color_shape"
            />
    </RelativeLayout>


</RelativeLayout>