<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#4068DD"
    android:orientation="vertical">

    <Button
        android:id="@+id/arrow"
        android:layout_width="61.79px"
        android:layout_height="52.52px"
        android:layout_marginStart="79.68px"
        android:layout_marginTop="145.75px"
        android:background="@drawable/lg_back" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134px"
        android:layout_marginTop="132.74px"
        android:fontFamily="@font/scdream6"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134px"
        android:layout_marginTop="274px"
        android:fontFamily="@font/scdream3"
        android:text="이메일 주소"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/scdream3"
        android:text="비밀번호"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="#AAAAAA" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="1168px"
        android:layout_height="155px"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/lg_button"
        android:fontFamily="@font/scdream6"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="470px"
            android:layout_height="wrap_content"
            android:layout_marginStart="313px"
            android:layout_marginTop="95px"
            android:clickable="true"
            android:fontFamily="@font/scdream3"
            android:gravity="center_horizontal"
            android:text="아이디/비밀번호 찾기"
            android:textColor="#FFFFFF"
            android:textSize="50px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="192px"
            android:layout_height="wrap_content"
            android:layout_marginStart="121px"
            android:layout_marginTop="95px"
            android:clickable="true"
            android:fontFamily="@font/scdream3"
            android:gravity="left"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="50px"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>