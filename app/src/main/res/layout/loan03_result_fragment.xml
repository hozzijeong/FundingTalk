<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity"
    android:background="@drawable/loan_bg_finish"
    >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="363dp"
        android:layout_height="277dp"
        android:layout_marginStart="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="156px"
            android:layout_marginTop="226px"
            android:fontFamily="@font/scdream6"
            android:text="대출"
            android:textColor="#ffffff"
            android:textSize="135px" />

        <Button
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="아파트 담보 대출 한도 조회"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/result_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/loan_allagree"
            android:fontFamily="@font/nanumbarungothic"
            android:gravity="center_vertical"

            android:paddingStart="20dp"
            android:text="수원시 권선구"
            android:textColor="#ffffff"
            android:textSize="13sp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="360dp"
        android:layout_height="220dp"
        android:layout_marginTop="316dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <TextView
            android:id="@+id/result_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="000 님의 대출 가능 금액입니다."
            android:textColor="#000000"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/result_cost_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="0 원"
            android:textColor="#4F79E0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/result_cost_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="대출 금리: "
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="신용등금 영향 x / 중상환수수료 x"
            android:textColor="#4F79E0" />

        <TextView
            android:id="@+id/result_cost_and_ltv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="펀딩톡 감정가: 0원/ LTV: 0%"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="360dp"
        android:layout_height="184dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.902">


        <LinearLayout
            android:id="@+id/result_no_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanumbarungothicbold"
                android:text="로그인을 하시면 더 정확한 대출 가능정보 파악이 가능합니다."
                android:textColor="#000000"
                android:textSize="13.5sp" />
            <!--            글자 색 설정은 Spanable 사용해서 색 변경 할 것.-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanumbarungothicbold"
                android:text="대출 진행을 원하시면 회원가입 또는 로그인 하셔야 합니다."
                android:textColor="#000000"
                android:textSize="13.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nanumbarungothic"
                android:text="(회원가입 / 로그인 이후 대출 신청화면으로 이동합니다."
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_on_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanumbarungothic"
                android:text="대출 진행을 원하시면 아래 내용 확인 후에 진행됩니다."
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nanumbarungothic"
                android:text="서비스 약관 및 동의"
                android:textColor="#2E2E2E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:paddingStart="40dp"
                android:weightSum="4">

                <CheckBox
                    android:id="@+id/result_check1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="(필수)개인(신용)정보 조회 동의"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/result_check2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="(필수)개인(신용)정보 제3자 제공 동의"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/result_check3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="(필수)개인(신용)정보 수집/이용 제공 동의"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/result_check_all"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/loan_allagree"
                    android:buttonTint="#ffffff"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="모든 약관을 확인하였고 전체 동의합니다."
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <Button
        android:id="@+id/result_next_btn"
        android:layout_width="292dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/loan_go"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="대출 진행하기"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>