<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loan_bg_finish"
    tools:context=".Login.LoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="156px"
        android:layout_marginStart="76px"
        android:layout_marginTop="354px"
        android:fontFamily="@font/scdream6"
        android:text="대출"
        android:textColor="#ffffff"
        android:textSize="135px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="92px"
        android:layout_marginTop="718px"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="아파트 담보 대출 한도 조회"
        android:textColor="#ffffff"
        android:textSize="80px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/result_address_tv"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="893px"
        android:layout_marginEnd="84px"

        android:background="@drawable/loan_allagree"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center_vertical"
        android:paddingStart="20dp"

        android:text="수원시 권선구"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />


    <TextView
        android:id="@+id/result_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="000 님의 대출 가능 금액입니다."
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436" />

    <TextView
        android:id="@+id/result_cost_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="대출 금리: "
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/result_cost_and_ltv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothic"
        android:text="펀딩톡 감정가: 0원/ LTV: 0%"
        android:textColor="#000000"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.621" />

    <TextView
        android:id="@+id/result_cost_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="0 원"
        android:textColor="#4F79E0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/result_next_btn"
        android:layout_width="292dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/loan_go"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="대출 진행하기"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />



    <androidx.constraintlayout.widget.Group
        android:id="@+id/result_onlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="result_onlog_tv,result_onlogin_check,result_check_all"
        android:visibility="invisible"
        />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/result_offlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="result_offlog_info,result_offlog_info2,result_offlog_info3"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/result_onlog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="대출 진행을 원하시면\n아래 내용 확인 후에 진행됩니다."
        android:textColor="#404040"
        android:textSize="65px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.723" />

    <LinearLayout
        android:id="@+id/result_onlogin_check"
        android:layout_width="305dp"
        android:layout_height="82dp"
        android:background="#E9EDF4"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/result_check1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:buttonTint="#B9B9B9"
            android:fontFamily="@font/nanumbarungothic"
            android:text="개인(정보) 정보 조회 동의 (필수)"
            android:bufferType="spannable"
            android:textColor="#575757"
            android:textSize="9dp" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/result_check2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:buttonTint="#B9B9B9"
            android:fontFamily="@font/nanumbarungothic"
            android:text="개인(정보) 정보 제 3자 제공 동의 (필수)"
            android:bufferType="spannable"
            android:textColor="#575757"
            android:textSize="9dp"

            />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/result_check3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:buttonTint="#B9B9B9"
            android:fontFamily="@font/nanumbarungothic"
            android:text="개인(정보) 정보 수집,이용 제공 동의 (필수)"
            android:bufferType="spannable"
            android:textColor="#575757"
            android:textSize="9dp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/result_check_all"
        android:layout_width="223dp"
        android:layout_height="31dp"
        android:buttonTint="#3A56BF"
        android:fontFamily="@font/nanumbarungothic"
        android:text="모든 약관을 확인하였고 동의합니다."
        android:textColor="#3A56BF"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901" />

    <TextView
        android:id="@+id/result_offlog_info"
        android:layout_width="280dp"
        android:layout_height="16dp"
        android:fontFamily="@font/nanumbarungothic"
        android:text="로그인을 하시면 더 정확한 대출가능정보 파악이 가능합니다."
        android:textColor="#717171"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/result_offlog_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="대출진행을 원하시면 회원가입\n또는 로그인 하셔야 합니다."
        android:textColor="#363636"
        android:textSize="72px"
        android:bufferType="spannable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78" />

    <TextView
        android:id="@+id/result_offlog_info3"
        android:layout_width="249dp"
        android:layout_height="16dp"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="회원가입/로그인 후 대출 신청화면으로 이동합니다."
        android:textColor="#939393"
        android:textSize="44px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />


</androidx.constraintlayout.widget.ConstraintLayout>