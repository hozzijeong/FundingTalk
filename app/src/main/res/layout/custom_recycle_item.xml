<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@drawable/round_color_shape"
            >
            <TextView
                android:id="@+id/custom_pro_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연 9.55% 12개월"
                android:textSize="59px"
                android:textColor="#2B2B2B"
                android:fontFamily="@font/nanumbarungothicbold"
                />
            <TextView
                android:id="@+id/custom_pro_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울시 강남구 대치동"
                android:layout_below="@id/custom_pro_info"
                android:textSize="32px"
                android:textColor="#A0A0A0"
                android:fontFamily="@font/nanumbarungothic"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/custom_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 투자 금액"
                android:layout_alignParentEnd="true"
                android:textSize="35px"
                android:textColor="#A0A0A0"
                android:fontFamily="@font/nanumbarungothic"
                />
            <TextView
                android:id="@+id/custom_total_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 만원"
                android:textSize="49px"
                android:textColor="#2B2B2B"
                android:fontFamily="@font/nanumbarungothicbold"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/custom_total_tv"
                android:layout_marginTop="5dp"

                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>